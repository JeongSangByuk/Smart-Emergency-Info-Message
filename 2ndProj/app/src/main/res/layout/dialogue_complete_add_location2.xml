<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="550dp"
    android:background="@drawable/background_dialog_add_location"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"

            android:adjustViewBounds="true"
            android:background="@color/colorTransparent"
            android:scaleType="fitCenter"
            android:src="@drawable/gps" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:fontFamily="@font/nanumsquareb"
            android:paddingTop="2dp"
            android:text="재난문자 수신지역 등록"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"

        app:lottie_autoPlay="true"
        app:lottie_fileName="complete.json"
        app:lottie_loop="false"
        app:lottie_speed="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/nanumsquareb"
        android:gravity="center"

        android:lineSpacingExtra="5dp"
        android:text="수신 지역 등록이 완료됐습니다!\n이제 재난문자를 똑똑하게 관리해요!"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"

            android:fontFamily="@font/nanumsquareb"
            android:text="장소 명"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/name_tag_dialog_complete_add_location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="50dp"
            android:gravity="right"

            android:fontFamily="@font/nanumsquarer"
            android:text="우리집"
            android:textColor="@color/black"
            android:textSize="17dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"

            android:fontFamily="@font/nanumsquareb"
            android:text="주소"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/loaction_dialog_complete_add_location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="50dp"
            android:gravity="right"

            android:fontFamily="@font/nanumsquarer"
            android:text="강원도 무시시"
            android:textColor="@color/black"
            android:textSize="17dp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/confirm_complete_add_location"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:background="@drawable/background_ok_button_complete_add_location"

            android:fontFamily="@font/nanumsquareb"
            android:text="확    인"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </LinearLayout>


</LinearLayout>



